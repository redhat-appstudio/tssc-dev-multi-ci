{%- include "do-not-edit.njk" -%}

image:
  name: quay.io/redhat-tssc/task-runner:davp1.2
  pull_policy: always

variables:
  CI_TYPE: gitlab

stages:
{%- for step in gitops_steps %}
  - {{ step.name }}
{%- endfor -%}

{%- for step in gitops_steps -%}
{%- for substep in step.substeps %}

{{ substep }}:
  stage: {{ step.name }}
  {% if not step.concurrent and not loop.first -%}
  {# Make the steps run sequentially -#}
  needs: [{{ step.substeps[loop.index0 - 1] }}]
  {% endif -%}
  script:
    - echo "â€¢ {{ substep }}"
    - bash /work/tssc/{{ substep }}.sh
  artifacts:
    paths:
      - results/
  rules:
    {# We're gating the merge so run when we're in a merge request -#}
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
{%- endfor -%}
{%- endfor %}
